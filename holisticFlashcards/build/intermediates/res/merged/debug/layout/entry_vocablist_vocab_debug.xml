<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label0_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="id"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/label1_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="hanzi"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/label2_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:hint="pinyin"
            android:maxLines="1"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/label3_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="translation"
            android:maxLines="1"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label4_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="references"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
        
    </LinearLayout>    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label5_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="numberOfRepetitions"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
        
        <TextView
            android:id="@+id/label6_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="eFactor"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
        
        <TextView
            android:id="@+id/label7_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="interRepetitionFactor"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
        
        <TextView
            android:id="@+id/label8_vocab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="dateOfReview"
            android:text="@+id/label"
            android:textSize="15sp" >
        </TextView>
        
    </LinearLayout>  

</LinearLayout>